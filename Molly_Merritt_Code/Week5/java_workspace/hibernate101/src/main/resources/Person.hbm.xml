<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="Person" table="PEOPLE">
	<!-- The generator element is used to generate PKs automatically. The
	class attribute is set to native to let hibernate pick its generation
	strategy depending upon capabilies of the underlying database -->
	<id name="id" type="int" column="P_ID">
		<generator class="native"/>
	</id>
	
	<property name="firstName" type="string" column="FIRST_NAME"/>
	<property name="lastName" type="string" column="LAST_NAME"/>
</class>
</hibernate-mapping>