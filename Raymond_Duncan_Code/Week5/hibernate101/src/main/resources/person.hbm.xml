<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.rev.pojos.Person" table="PEOPLE">
		<id name="id" type="int" column="P_ID">
		<!-- The generator element is used to generate PDs automatically. The class attribute is set to native to let the hibernate pick its 
		generation strategy depending on capabilities of the underlying database -->
			<generator class="native"></generator>
		</id>
		<property name="firstname" type="string" column="FIRST_NAME"></property>
		<property name="lastname" type="string" column="LAST_NAME"></property>
	</class>
</hibernate-mapping>