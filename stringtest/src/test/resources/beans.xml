<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">


	<bean id="thisIsABean" class="com.ex.hellospring.helloWorld" scope="prototype">
	
		<property name ="message" value="welcome to spring this is dep injection"/>
		
		<constructor-arg name ="message" value="welcome to spring this is Constructor injection">
		</constructor-arg>
		
	</bean>

	<bean id="dependent" class="com.ex.hellospring.DependentBean">
		<property name="hello" ref="thisIsABean"></property>
	</bean>


